doctype html
html(lang="en")
  head
    link(rel='stylesheet', href='css/bootstrap.css')
    title= BaseApp
  body
    center
      div(style='border:solid 2px black;margin-top:150px;width:auto;padding:30px;display: inline-block;')
        script(src='js/jquery.js')
        script(src='js/bootstrap.min.js')
        p BaseApp : Blog Details  
         a(href='/showAddblog')
          u ADD BLOG
         p(style='color:red') #{message}
        if(data)
          table(border="2")
            tr
                td 
                  b AUTHOR
                |     
                td 
                  b TITLE
                |    
                td 
                  b EDIT
                |    
                td 
                  b DELETE
            for doc in data
              tr
                td #{doc.author}
                |     
                td #{doc.title}
                |      
                td
                  a(href='/showUpdateView/' + doc._id)
                    | EDIT
                td
                  a(href='/showDeleteView/' + doc._id)
                    | DELETE